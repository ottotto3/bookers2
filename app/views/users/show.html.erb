<!--フラッシュメッセージ-->
<div>
  <%= flash[:notice] %>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-lg-4">
      <div>
        <%= render 'info', user: @user %>
        <%= render 'books/form', book: @book %>
      </div>
    </div>
    
    <div class="col-lg-8">
      <table class="table">
        <h2>Books</h2>
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
      </thead>
    </div>
  </div>
</div>
<tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
          </tbody>  
</table>