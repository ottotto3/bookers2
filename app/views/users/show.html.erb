
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div>
        <%= render 'info', user: @user %>
        <%= render 'books/form', book: @book %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table">
        <h2>Books</h2>
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
      </thead>
    </div>
  </div>
</div>
<tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %><% end %>
        </td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
          </tbody>
</table>