<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-5 my-2" style="background-color: orange;">
    <%= form_with model: @user do |f| %>
    <h2>User info</h2>
      <p>Name</p>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      <p>Image</p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
      <p>Introduction</p>
        <%= f.text_area :introduction %>  
      <div><%= f.submit "Update user" , class: "btn btn-secondary" %></div>
    <% end %>
    </div>
  </div>
</div>