
<div class="container-fluid">
  <div class="row">
    <div class="col-5 px-5 mx-auto">
    <%= form_with model: @user do |f| %>
    <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <p>Name</p>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
      <p>Image</p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "mb-3" %>  
      <p>Introduction</p>
        <%= f.text_area :introduction, class: "form-control" %>  
      <div><%= f.submit "Update User" , class: "btn btn-secondary mt-3" %></div>
    <% end %>
    </div>
  </div>
</div>
  