<% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
    
<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: orange;">
      
      <h1 class="row">New book</h1>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
        <% end %>
    </div>
    
    <div class="col-lg-8">
      <table class="table">
        <h1>Books</h1>
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
      </thead>
    </div>
  </div>
</div>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td><%= book.body %></td>
        <!--<td>ユーザーネーム：<%= book.user.name %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>