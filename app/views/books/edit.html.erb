<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-5 px-5 mx-auto">
    <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title, class: "btn-block mb-3" %>
    <p>Opinion</p>
      <%= f.text_area :body, class: "btn-block mb-3" %>
    <div><%= f.submit 'Update Book', class: "btn btn-success mb-3" %></div>
  <% end %>
    <p>
      <%= link_to "Show", book_path(@book.id) %> | 
      <%= link_to "Back", books_path %>
    </p>
  
    </div>
  </div>
</div>